<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">  
<beans>  
 	<!--本息到账-->  
    <!-- 定时服务定义 -->  
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">  
        <!-- 自动启动 -->  
        <property name="autoStartup">  
            <value>true</value>  
        </property>  
        <property name="triggers">  
            <list>  
                <ref bean="cronTriggerBean" />  
            </list>  
        </property>  
    </bean>  
      
    <bean id="cronTriggerBean" class="org.springframework.scheduling.quartz.CronTriggerBean">  
        <property name="jobDetail">  
            <ref bean="jobDetailBean" />  
        </property>  
        <property name="cronExpression">  
            <!-- 凌晨0点开始-->  
            <value>0 0 0 * * ?</value>  
        </property>  
    </bean>  
      
    <bean id="jobDetailBean" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">  
        <!-- 执行任务的类 -->
        <property name="targetObject" ref="queryExpireScale"></property>       
        <!-- 执行任务的方法 -->
        <property name="targetMethod" value="run"></property>  
        <property name="concurrent" value="false" />  
    </bean>  
     <!-- 执行任务的类映射 -->
    <bean id="queryExpireScale" class="org.duang.task.QueryExpireScale"></bean>  
</beans>  